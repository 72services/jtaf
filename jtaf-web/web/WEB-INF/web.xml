<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Force SSL for entire site</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
        
    <security-constraint>
        <display-name>Master data</display-name>
        <web-resource-collection>
            <web-resource-name>masterdata</web-resource-name>
            <url-pattern>/masterdata/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Result input</display-name>
        <web-resource-collection>
            <web-resource-name>resultinput</web-resource-name>
            <url-pattern>/resultinput/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>resultinput</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>REST</display-name>
        <web-resource-collection>
            <web-resource-name>REST protected</web-resource-name>
            <url-pattern>/res/athletes/*</url-pattern>
            <url-pattern>/res/categories/*</url-pattern>
            <url-pattern>/res/clubs/*</url-pattern>
            <url-pattern>/res/competitions/*</url-pattern>
            <url-pattern>/res/events/*</url-pattern>
            <url-pattern>/res/series/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>resultinput</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login_error.html</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>resultinput</role-name>
    </security-role>
    
</web-app>
